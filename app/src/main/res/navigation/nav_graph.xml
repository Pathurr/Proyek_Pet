<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.proyek.HomeFragment"
        android:label="Home">

        <action
            android:id="@+id/action_home_to_reportLostFragment"
            app:destination="@id/reportLostFragment" />

        <action
            android:id="@+id/action_home_to_reportFoundFragment"
            app:destination="@id/reportFoundFragment" />
    </fragment>

    <fragment
        android:id="@+id/reportLostFragment"
        android:name="com.example.proyek.ReportLostFragment"
        android:label="Report Lost" />

    <fragment
        android:id="@+id/reportFoundFragment"
        android:name="com.example.proyek.ReportFoundFragment"
        android:label="Report Found" />

    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.example.proyek.NotificationFragment"
        android:label="Notification" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.proyek.ProfileFragment"
        android:label="Profile" />

    <fragment
        android:id="@+id/reportDetailFragment"
        android:name="com.example.proyek.ReportDetailFragment"
        android:label="Detail Laporan">

        <argument
            android:name="reportId"
            app:argType="string" />

        <argument
            android:name="reportType"
            app:argType="string" />
    </fragment>
    <action
        android:id="@+id/action_home_to_reportDetailFragment"
        app:destination="@id/reportDetailFragment" />

    <action
        android:id="@+id/action_reportDetailFragment_to_homeFragment"
        app:destination="@id/homeFragment"
        app:popUpTo="@id/homeFragment"
        app:popUpToInclusive="true"/>

</navigation>
