<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/bg_popup"
    android:clipToOutline="true">

    <!-- Lost Pet -->
    <LinearLayout
        android:id="@+id/optionLost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Lost Pet"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:gravity="center"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_lost_pet"
            android:contentDescription="Lost Pet"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Found Pet -->
    <LinearLayout
        android:id="@+id/optionFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Found Pet"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:gravity="center"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_found_pet"
            android:contentDescription="Found Pet"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</LinearLayout>
